{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "types": ["bun-types", "node"],
    "lib": ["ESNext"],
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["index.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}

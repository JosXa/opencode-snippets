# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript, JavaScript
[*.{ts,tsx,js,jsx,mts,mjs}]
indent_style = space
indent_size = 2

# JSON, JSONC
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# YAML
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# Markdown
[*.{md,mdx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# CSS, SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# HTML
[*.{html,htm}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Docker
[Dockerfile]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
